<?xml version="1.0" encoding="utf-8"?>
<manifest
	package = "com.nullcognition.cleanarchitecture"
	xmlns:android = "http://schemas.android.com/apk/res/android"
	>

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:allowBackup="true"
		android:name=".presentation.AndroidApplication"
		android:label="@string/app_name"
		android:theme="@style/Theme.AppCompat">

		<activity
			android:name=".presentation.view.activity.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".presentation.view.activity.UserListActivity"
			android:label="userlistactivity">
		</activity>

		<activity
			android:name=".presentation.view.activity.UserDetailsActivity"
			android:label="userdetailsactivity">
		</activity>
	</application>

</manifest>
